<Window x:Class="GUI_20212202_G1WRGM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_20212202_G1WRGM"
        xmlns:renderer="clr-namespace:GUI_20212202_G1WRGM.Renderer"
        mc:Ignorable="d"
        Title="Dude, touch some grass" Height="450" Width="800" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged">
    <Grid x:Name="grid">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Background/MainMenuBackground.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!--1. column-->

        <!--2. column-->
        <StackPanel Grid.Column="1" x:Name="menuStack">
            <Label Content="Dude, touch some grass" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White" Margin="0,25" FontSize="20"/>
            <Button Height="40" Width="100" Margin="15" Click="StartGame_Click" Style="{StaticResource NoMouseOverEffectButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Others/PlayNowButton.png"/>
                </Button.Background>
                <Button.Triggers>
                    <EventTrigger RoutedEvent = "Button.Loaded">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                <Storyboard>

                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity" RepeatBehavior="Forever">
                                        <DiscreteDoubleKeyFrame Value = "0.0" KeyTime = "0:0:0"/>
                                        <LinearDoubleKeyFrame Value = "1.0" KeyTime="0:0:0:1"/>
                                    </DoubleAnimationUsingKeyFrames>

                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Content="Scoreboard" Height="40" Width="100" Margin="15" Click="Scoreboard_Click" Background="White"/>
            <Button Content="Close Game" Height="40" Width="100" Margin="15"/>
        </StackPanel>
        <!--3. column-->

        <renderer:Display x:Name="display"/>
    </Grid>
</Window>
